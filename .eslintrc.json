{
  "env": {
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"],
  "overrides": [
    {
      "files": [
        "**/*.ts?(x)"
      ],
      "parser": "@typescript-eslint/parser"
      //...
    },
    {
      "files": [
        "**/*.js?(x)"
      ],
      "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2015
      }
    }
  ]
}
